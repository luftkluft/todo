<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <h2><%= t('.title', resource: resource_name.to_s.humanize) %></h2>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('devise.shared.links.first_name') %><br />
    <%= f.text_field :first_name, default: "" %>
  </div>

  <div class="field">
    <%= f.label t('devise.shared.links.last_name') %><br />
    <%= f.text_field :last_name, default: "" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update'), class:"btn btn-primary" %>
  </div>
<% end %>

<div class="landing-info">

    <%= link_to t('devise.shared.links.back'), :root %>

  <h3><%= t('.cancel_my_account') %></h3>

  <p>
    <%= button_to t('.cancel_my_account'), registration_path(resource_name),
      data: { confirm: t('.are_you_sure') }, method: :delete,
      class:"btn btn-danger" %>
  </p>

</div>



